### has_country_flag = crisis_in_progress
### has to be implemented
political_actions = {
    national_unrest_civil_war_imminent = {

		priority = 100

		icon = generic_ignite_civil_war

		available = {
			hidden_trigger = { always = no }
		}

		days_mission_timeout = 7

		fire_only_once = no

		activation = {
			always = no
		}

		visible = {
			### Has to be implemented
			always = yes
			# check_variable = { ebf_economy_national_unrest?1 > 0.99 }
		}

		cancel_if_not_visible = yes

		is_good = no

		timeout_effect = {
			if = {
				limit = {
					ideology = fascism
				}
				start_civil_war = {
					ideology = communism
					size = 0.35
				}
			}
			else = {
				start_civil_war = {
					ideology = fascism
					size = 0.35
				}
			}
			add_stability = -0.15	
		}
	}
}
